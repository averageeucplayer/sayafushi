{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "productName": "LOA logs",
  "version": "0.0.1",
  "identifier": "com.loa-logs",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../build"
  },
  "app": {
    "security": {
      "csp": "default-src *; img-src 'self' https: data:; style-src 'self' 'unsafe-inline'; font-src 'self' data:"
    },
    "windows": [
      {
        "label": "main",
        "title": "Meter | LOA Logs",
        "userAgent": "LOA Logs App",
        "url": "live",
        "fullscreen": false,
        "width": 500,
        "height": 350,
        "resizable": true,
        "decorations": false,
        "transparent": true,
        "minWidth": 400,
        "minHeight": 120,
        "alwaysOnTop": true,
        "visible": false,
        "focus": false
      },
      {
        "label": "logs",
        "title": "LOA Logs",
        "userAgent": "LOA Logs App",
        "url": "logs",
        "minWidth": 650,
        "minHeight": 300,
        "width": 800,
        "height": 500,
        "decorations": true,
        "visible": false
      },
      {
        "label": "mini",
        "title": "mini | LOA Logs",
        "userAgent": "LOA Logs App",
        "url": "mini",
        "fullscreen": false,
        "width": 1280,
        "height": 200,
        "resizable": true,
        "decorations": false,
        "transparent": true,
        "minWidth": 1280,
        "minHeight": 200,
        "alwaysOnTop": true,
        "visible": false,
        "focus": false
      }
    ]
  }
}
