{
  "$schema": "https://schema.tauri.app/config/2",
  "build": {
    "beforeDevCommand": "cd ../web && npm run dev",
    "beforeBuildCommand": "cd ../web && npm run build",
    "frontendDist": "../web/build",
    "devUrl": "http://localhost:5173"
  },
  "bundle": {
    "active": true,
    "category": "Utility",
    "copyright": "GNU General Public License v3.0",
    "resources": [
      "meter-data/*.json",
      "migrations/*.sql",
      "settings.template.json"
    ],
    "icon": [
      "icons/icon.ico"
    ],
    "longDescription": "Sayafushi",
    "shortDescription": "Sayafushi",
    "licenseFile": "../LICENSE"
  },
  "productName": "Sayafushi",
  "version": "0.0.1",
  "identifier": "xyz.sayafushi",
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEYzNjQ2NTA0RUVFRDc3NjQKUldSa2QrM3VCR1ZrOHk0UENlT1MxRFcxUHY3YTh5MXhzbmRQUjJPd3ZJQmk1eXU0NDgvNUFBWWgK",
      "endpoints": [
        "https://github.com/averageeucplayer/sayafushi/releases/latest/download/latest.json"
      ]
    }
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Meter | Sayafushi",
        "userAgent": "Sayafushi-Meter",
        "url": "live",
        "fullscreen": false,
        "width": 500,
        "height": 350,
        "resizable": true,
        "shadow": false,
        "decorations": false,
        "transparent": true,
        "minWidth": 400,
        "minHeight": 120,
        "alwaysOnTop": true,
        "visible": false,
        "focus": false,
        "useHttpsScheme": true
      },
      {
        "label": "logs",
        "title": "Logs | Sayafushi",
        "userAgent": "Sayafushi-Logs",
        "url": "logs",
        "minWidth": 650,
        "minHeight": 300,
        "width": 800,
        "height": 500,
        "decorations": true,
        "dragDropEnabled": false,
        "visible": false,
        "useHttpsScheme": true
      },
      {
        "label": "mini",
        "title": "mini | Mini",
        "userAgent": "Sayafushi-Mini",
        "url": "mini",
        "fullscreen": false,
        "width": 1280,
        "height": 200,
        "resizable": true,
        "shadow": false,
        "decorations": false,
        "transparent": true,
        "minWidth": 1280,
        "minHeight": 200,
        "alwaysOnTop": true,
        "visible": false,
        "focus": false,
        "useHttpsScheme": true
      }
    ],
    "security": {
      "csp": "default-src *; img-src 'self' https: data:; style-src 'self' 'unsafe-inline'; font-src 'self' data:; connect-src ipc: http://ipc.localhost"
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "id": "main",
      "showMenuOnLeftClick": false
    }
  }
}